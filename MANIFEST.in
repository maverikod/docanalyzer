include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py
include setup.cfg

recursive-include docanalyzer *.py
recursive-include docanalyzer *.pyi
recursive-include docanalyzer *.txt
recursive-include docanalyzer *.json
recursive-include docanalyzer *.yaml
recursive-include docanalyzer *.yml

recursive-include tests *.py
recursive-include tests *.txt
recursive-include tests *.json

recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt

global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude .hg*
global-exclude .svn*
global-exclude .coverage
global-exclude .pytest_cache
global-exclude htmlcov
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude build
global-exclude dist
global-exclude *.egg-info 